<h2>Thay đổi thông tin khách hàng</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="field">
    Email<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    Tên khách hàng<br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    Địa chỉ<br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    Điện thoại<br />
    <%= f.text_field :phone %>
  </div>
  <div class="actions">
    <%= f.submit "Cập nhật" %>
  </div>
<% end %>
<%= link_to "Back", :back %>
